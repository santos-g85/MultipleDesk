@model MultipleDesk.Models.UserRegistration
@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-7 mt-5">
    <div class="row  align-items-center gx-5">
        <!-- Text Content -->
        <div class="col-md-6">
            <h1 class="fw-bold text-danger mb-4 display-4">
                Effortless Remote Access.<br class="d-none d-md-block" />
                <span class="text-dark">Secure. Fast. Simple.</span>
            </h1>
            <p class="mb-4 lead">
                MultipleDesk lets you connect, control, and assist any device instantly.
                No complex setup, no confusion—just seamless access anytime, anywhere.
            </p>
            <div class="mb-3 fst- fw-semibold text-muted">v1.0.0</div> <!-- Version text -->
            <div class="d-flex flex-wrap gap-3 mb-4">
                <button class="btn btn-danger px-5 py-3 fs-5" data-bs-toggle="modal" data-bs-target="#registerModal">Download</button>
                @* <a href="#" class="btn btn-outline-danger px-5 py-3 fs-5">Learn More</a> *@
            </div>
        </div>

        <!-- Image Section -->
        <div class="col-md-6 text-center pe-md-3 mt-4 mt-md-0 " >
            <img src="~/images/logohere.png" class="img-fluid " style="max-height:500px; max-width:500px" alt="Remote Access Devices" />
        </div> 
    </div>
</div>

<!-- Disclaimer -->
<div class="container mt-3 mb-5">
    <div class="alert alert-warning text-center shadow-sm rounded" role="alert">
        <strong>Disclaimer:</strong> This application is currently in the <em><b class="fw-bold">Beta version</b></em>.
    </div>
</div>



<!-- Registration Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Register" asp-action="Register" method="post">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Register to Download</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label>First Name</label>
                        <input asp-for="FirstName" class="form-control" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Last Name</label>
                        <input asp-for="LastName" class="form-control" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Mobile Number</label>
                        <input asp-for="MobileNumber" class="form-control" required />
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" type="submit">Register & Download</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var shouldDownload = '@TempData["TriggerDownload"]' === 'True';
            if (shouldDownload) {
                window.location.href = '/Register/Download';
            }
        });
    </script>
}

